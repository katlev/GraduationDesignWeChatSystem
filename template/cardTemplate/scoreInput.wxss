.scoreItem{
  display: flex;
  font-size: 30rpx;
  color:#495060;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
}
.socreInput{
  flex: 1;
  border-bottom: 1rpx solid #e9eaec;
  padding: 4rpx;
}
.socreInput:hover{
  border-bottom: 1rpx solid #07C160;
}

.inputGuidance{
  font-size: 30rpx;
  color: #495060;
  padding-bottom: 10rpx;
}

.guidanceValue{
  border: 1rpx solid #e9eaec;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #495060;
  padding: 16rpx;
  height: 200rpx!important;
}
.guidanceValue:hover{
  border: 1rpx solid #07C160;
}

.submitBtn{
  width: 630rpx!important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin: 40rpx 0;
  background: #07C160;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}
.submitBtn:active{
  background-color: #07B160;
}
.content{
  padding: 0 20rpx;
}

.mini-btn{
  font-size: 28rpx!important;
  margin-left: 10rpx;
}
