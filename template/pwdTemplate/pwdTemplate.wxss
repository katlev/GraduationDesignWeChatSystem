/*头部解释文字*/
.pwdDesc{
  font-size: 28rpx;
  color: #a1a1a1;
  height: 100rpx;
  padding: 20rpx 0;
}
/*修改密码表单*/
.pwdForm{
  padding: 40rpx;
}
/*表单头部*/
.pwdFormTitle{
  font-size: 30rpx;
  color: #a1a1a1;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  border-bottom: 1rpx solid #d5d5d5;
}
/*表单内容*/
.titleValue{
  flex: 1;
  margin-left: 20rpx;
}
.pwdFormItem{
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;

}
.pwdItemValue{
  flex: 1;
  margin-left: 40rpx;
  display: inline-block;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #d5d5d5;
}
.pwdItemValue:hover{
  border-bottom: 1rpx solid #07C160;
}
/*表单底部提示*/
.pwdFooter{
  font-size: 28rpx;
  margin-top: 10rpx;
}
/*表单提交按钮*/
.pwdBtn{
  width: 630rpx!important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin: 60rpx 0;
  background: #07C160;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}
.pwdBtn:active{
  background: #17B160;
}