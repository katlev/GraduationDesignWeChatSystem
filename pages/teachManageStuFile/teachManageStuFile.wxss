.fileItem{
  display: flex;
  font-size: 30rpx;
  color:#495060;
  border-bottom: 1rpx solid #e9eaec;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
}
.fileName{
  flex: 1;
}
.taskTitle{
  flex: 1;
  color: #5cadff;
  padding-right: 8rpx;
  /* white-space: nowrap;
