}
.content{
  padding: 0 20rpx;
}
.uploadBtn{
  width: 80rpx!important;
  height: 50rpx;
  line-height: 50rpx!important;
  padding: 0!important;
  text-align: center;
  background-color: #07C160;
  color: #ffffff;
