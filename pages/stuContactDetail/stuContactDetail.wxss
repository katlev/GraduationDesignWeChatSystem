/* pages/stuContactDetail/stuContactDetail.wxss */
@import '/template/cardTemplate/teachCard.wxss';
.message{
  padding: 20rpx;
}
.message textarea{
  padding: 10rpx;
  border: 1rpx solid #e9eaec;
  border-radius: 10rpx;
}
.message textarea:hover{
  border: 1rpx solid #19be6b;
}
.mini-btn{
  font-size: 28rpx!important;
}
.secondTitle{
  color:#1c2438;
  margin-left:10rpx;
}
/* 气泡框 */
.bubble{
  position: relative;
  margin:20rpx 40rpx;
  padding: 20rpx;
  background-color: #79BBFF;
  color: #ffffff;
  border-radius: 10rpx;
}
.bubble::after{
  content: '';
  width: 0;
  height: 0;
  display: block;
  border-style: solid;
  border-width: 20rpx;
  border-color: transparent #79BBFF  transparent transparent;
  position: absolute;
  z-index: 1;
  left: -35rpx;
  top: 30rpx;
}
.prompt{
  font-size:28rpx;
  text-align:right;
}
.teachLeave{
  margin-top: 10rpx;
  border-top: 1rpx solid #ffffff;
  padding-top: 10rpx;
}

/* 底部输入框 */
.inputButtom{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  align-items: center;
  z-index: 10;
}
.bottomLeft{
  width: 80%;
  height: 80%;
}
.bottomLeft input{
  width: 90%;
  height: 100%;
  margin: auto;
  font-size: 28rpx;
  background-color: #f8f8f9;
  border-radius: 10rpx;
  padding: 0 10rpx;
}
.bottomRight{
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  color: #ffffff;
  background-color: #19be6b;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
