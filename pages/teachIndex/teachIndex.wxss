/* pages/teachIndex/teachIndex.wxss */
.titleHead{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e9eaec;
}
.titleHead text{
  margin-left: 20rpx;
  color:#1c2438;
  flex: 1;
  font-size: 32rpx;
}
.mini-btn{
    font-size: 32rpx!important;
    margin-right: 20rpx;
}

.i-swipeout-des{
  display: flex;
  position: relative;
}
.i-swipeout-des-h2{
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  max-width: 500rpx;
  text-overflow: ellipsis;
}
.icon{
  position: absolute;
  right: 0;
}
.desState{
  display: flex;
  font-size: 28rpx;
  color:#80848f;
}
.state{
  color:#07C160;
}

.i-swipeout-demo-button-group{
  background-color: #ed3f14;
  text-align: center;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.i-swipeout-demo-button{
  color:#fff;
}
.titleScroll{
  height: calc(100vh - 81rpx);
}
